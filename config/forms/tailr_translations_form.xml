<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd">
    <key>tailr_translations_form</key>
    <properties>
        <section name="general">
            <meta>
                <title>General</title>
            </meta>
            <properties>
                <property name="translationKey" type="text_area" disabledCondition="id">
                    <meta>
                        <title>Key</title>
                    </meta>
                </property>
                <property name="translation" type="text_area" mandatory="true">
                    <meta>
                        <title>Translation</title>
                    </meta>
                </property>
                <property name="domain" type="text_line" disabledCondition="id" colspan="6">
                    <meta>
                        <title>Domain</title>
                    </meta>
                </property>
                <property name="locale" type="text_line" disabledCondition="id" colspan="6">
                    <meta>
                        <title>Locale</title>
                    </meta>
                </property>
            </properties>
        </section>
    </properties>
</form>